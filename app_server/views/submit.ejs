<%include partials/head.ejs%>

<div class="container" style="margin-top: 100px">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-body" style="margin: auto;">
                        <p class="instruction">Enter your OTP</p>
                        <form accept-charset='UTF-8' role='form' method='POST' action='/submit' id="otpSubmitForm">
                            <fieldset>
                                <div class='row form-group'>
                                    <input class='form-control' placeholder='4-digit OTP' maxlength='4' name='otpInput' id='otpInput' pattern="^[0-9]{4}$" required>
                                </div>

                                <span id="submitResMsg">
                                </span>

                                <div class='row form-group'>
                                    <input class='btn btn-info btn-md' type='submit' value='Submit' id='submitBtn'>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/javascripts/submit.js"></script>

    <%include partials/foot.ejs%>
