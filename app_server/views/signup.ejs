<%include partials/head.ejs%>

<div class="container" style="margin-top: 100px">
	<div class="row">
		<div class="col-md-4 col-md-offset-4 col-sm-12">
			<div class="panel panel-default">
				<h4>REGISTER</h4>
				<hr>
				<div class="panel-body">
					<form accept-charset='UTF-8' method='POST' role='form' id="signupForm" action="/signup">
						<div class="form-group">
							<input type="text" name="username" class="form-control" id="usernameSignUp" placeholder="Username" pattern="^[\w]{5,30}$"
							 title="Username should not contain special character(s). Length: 5-30" required>
						</div>
						<div class="form-group">
							<input type="text" name="name" class="form-control" id="nameSignUp" placeholder="Full name" pattern="^[a-zA-Z ]{5,30}$"
							 title="Your name should not contain number special character(s). Length: 5-30" required>
						</div>
						<div class="form-group">
							<input type="email" name="email" class="form-control" id="emailSignUp" placeholder="Email" value="" required>
						</div>

						<div class="form-group">
							<input type="tel" name="phone" class="form-control" id="phoneSignUp" placeholder="+84385179777" pattern="^\+84\d{9,10}$"
							 required>
						</div>
						<div class="form-group">
							<input type="password" name="password" class="form-control" id="passwordSignUp" placeholder="Password" pattern="^.{8,30}$"
							 title="Length: 8-30" value="" required>
						</div>
						<div class="form-group">
							<input type="password" class="form-control" id="passwdConfirmSignUp" placeholder="Re-enter password" value=""
							 onchange="checkPasswordMatch()" required>
						</div>

						<div class="form-group">
							<input type="submit" name="" class="btn btn-success btn-lg btn-lock" id="signUpSubmitBtn" value="Sign up">
						</div>
						<div class="form-group">
							<p>Already have an account? <a href="/login">Sign in.</a></p>
						</div>
						<%
								var infoHidden = "hidden";
								var msg = "";
								if (typeof message !== 'undefined') {
									infoHidden = "";
									msg = message;
								}
							%>

						<span <%=infoHidden%>>
							<a href="" class="glyphicon glyphicon-warning-sign"></a>
							&nbsp;
							<%=msg%>
						</span>
					</form>
				</div>
				<div class="lock">
					"
					<i class="fa fa-lock fa-3x"></i>
					"
				</div>
			</div>
		</div>
	</div>
</div>
<script src="/javascripts/signup.js"></script>


<%include partials/foot.ejs%>

